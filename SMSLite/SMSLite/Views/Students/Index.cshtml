@model IEnumerable<SMSLite.Models.Student>

@{
    ViewBag.Title = "Students";
    var searchName = Request["searchName"];
    var searchDept = Request["searchDept"];
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewBag.Title</h2>

    @Html.ActionLink(
        "Create New",
        "Create",
        null,
        new { @class = "btn btn-primary" }
    )
</div>

<div class="card mb-3">
    <div class="card-body">
        @using (Html.BeginForm("Index", "Students", FormMethod.Get, new { @class = "row g-2 align-items-end" }))
        {
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("searchName", "Name")
                    @Html.TextBox("searchName", searchName, new
                    {
                        @class = "form-control",
                        placeholder = "Search by name"
                    })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("searchDept", "Department")
                    @Html.TextBox("searchDept", searchDept, new
                    {
                        @class = "form-control",
                        placeholder = "Search by department"
                    })
                </div>
            </div>

            <div class="col-md-4 d-flex">
                <button type="submit" class="btn btn-primary me-2">
                    Search
                </button>

                @Html.ActionLink(
                    "Reset",
                    "Index",
                    "Students",
                    null,
                    new { @class = "btn btn-outline-secondary" }
                )
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No students found.
    </div>
}
else
{

    @Html.Partial("_StudentList", Model)
   
}
