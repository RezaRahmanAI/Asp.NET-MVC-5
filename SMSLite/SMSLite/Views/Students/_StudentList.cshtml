@model IEnumerable<SMSLite.Models.Student>


<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().DateOfBirth)</th>
            <th>@Html.DisplayNameFor(m => m.First().Email)</th>
            <th>@Html.DisplayNameFor(m => m.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(m => m.First().Address)</th>
            <th>@Html.DisplayNameFor(m => m.First().Department)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>
                    @item.DateOfBirth.ToString("dd MMM yyyy")
                </td>
                <td>@Html.DisplayFor(_ => item.Email)</td>
                <td>@Html.DisplayFor(_ => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(_ => item.Address)</td>
                <td>@Html.DisplayFor(_ => item.Department)</td>
                <td class="text-end">
                    @Html.ActionLink(
                        "Course",
                        "Course",
                        "Students",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-primary" }
                        )
                    @Html.ActionLink(
                        "Edit",
                        "Edit",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-warning me-1" }
                    )
                    @Html.ActionLink(
                        "Details",
                        "Details",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-info me-1" }
                    )
                    @Html.ActionLink(
                        "Delete",
                        "Delete",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-danger" }
                    )
                </td>
            </tr>
        }
    </tbody>
</table>
