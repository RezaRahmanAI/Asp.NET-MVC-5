@model SMSLite.Models.Student

@{
    ViewBag.Title = "Student Details";
}

<h2 class="mb-3">@ViewBag.Title</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-3">Student</h4>
        <hr />

        <dl class="row mb-0">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.DateOfBirth)
            </dt>
            <dd class="col-sm-9">
                @* Use DisplayFor or format manually if needed *@
                @Html.DisplayFor(m => m.DateOfBirth)
                @* or: @Model.DateOfBirth.ToString("dd MMM yyyy") *@
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Email)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.PhoneNumber)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Address)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Address)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Department)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Department)
            </dd>
        </dl>

        <div class="mt-4 d-flex justify-content-between">
            @Html.ActionLink(
                "Back to List",
                "Index",
                "Students",
                null,
                new { @class = "btn btn-outline-secondary" }
            )

            @Html.ActionLink(
                "Edit",
                "Edit",
                "Students",
                new { id = Model.Id },
                new { @class = "btn btn-primary" }
            )
            
        </div>
    </div>
</div>
