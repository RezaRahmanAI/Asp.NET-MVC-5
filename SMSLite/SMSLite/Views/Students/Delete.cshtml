@model SMSLite.Models.Student

@{
    ViewBag.Title = "Delete Student";
}

<h2 class="mb-3">@ViewBag.Title</h2>

<div class="card border-danger">
    <div class="card-body">
        <h4 class="card-title text-danger">Are you sure you want to delete this?</h4>
        <hr />

        <dl class="row mb-0">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.DateOfBirth)
            </dt>
            <dd class="col-sm-9">
                @* Use DisplayFor or format manually if you prefer *@
                @Html.DisplayFor(m => m.DateOfBirth)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Email)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.PhoneNumber)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Address)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Address)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => m.Department)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Department)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Students", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="mt-4 d-flex justify-content-between">
                @Html.ActionLink(
                    "Back to List",
                    "Index",
                    "Students",
                    null,
                    new { @class = "btn btn-outline-secondary" }
                )

                <button type="submit" class="btn btn-danger">
                    Delete
                </button>
            </div>
        }
    </div>
</div>
