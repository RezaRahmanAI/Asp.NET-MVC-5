@model SMSLite.Models.Student

@{
    ViewBag.Title = "Create Student";
}

<h2 class="mb-3">@ViewBag.Title</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-3">Student</h4>
        <hr />

        @using (Html.BeginForm("Create", "Students", FormMethod.Post, new { @class = "row g-3" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(false, "", new { @class = "text-danger mb-2" })

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(
                        m => m.DateOfBirth,
                        "{0:yyyy-MM-dd}",
                        new { @class = "form-control", type = "date" }
                    )
                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Department, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                </div>

                <!-- Buttons directly under Department -->
                <div class="mt-3 gap-4 d-flex">
                    @Html.ActionLink(
                        "Back to List",
                        "Index",
                        "Students",
                        null,
                        new { @class = "btn btn-outline-secondary" }
                    )

                    <button type="submit" class="btn btn-primary px-lg-5">
                        Create
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
