
@model SMSLite.Models.ViewModels.StudentDashboardViewModel


@{
    ViewBag.Title = "Student Dashboard";
}

<h2>@ViewBag.Title</h2>

<p><strong>Total Students:</strong> @Model.TotalStudents</p>

<h3>Students per Department</h3>
<table class="table table-bordered">
    <tr>
        <th>Department</th>
        <th>Count</th>
    </tr>
    @foreach (var item in Model.StudentCountsPerDept)
    {
        <tr>
            <td>@item.Department</td>
            <td>@item.StudentCount</td>
        </tr>
    }
</table>
