@model IEnumerable<SMSLite.Models.Domain.Course>

@{
    ViewBag.Title = "Courses";
    var searchTerm = Request["searchTerm"];
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewBag.Title</h2>

    @Html.ActionLink(
        "Create New",
        "Create",
        null,
        new { @class = "btn btn-primary" }
    )
</div>

<div class="card mb-3">
    <div class="card-body">
        @using (Html.BeginForm("Index", "Courses", FormMethod.Get, new { @class = "row g-2 align-items-end" }))
        {
            <div class="col-md-8">
                <div class="form-group">
                    @Html.Label("searchTerm", "Search")
                    @Html.TextBox("searchTerm", searchTerm, new
                    {
                        @class = "form-control",
                        placeholder = "Search by name, code, credit, or semester"
                    })
                </div>
            </div>

            <div class="col-md-4 d-flex">
                <button type="submit" class="btn btn-primary me-2">
                    Search
                </button>

                @Html.ActionLink(
                    "Reset",
                    "Index",
                    "Courses",
                    null,
                    new { @class = "btn btn-outline-secondary" }
                )
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No courses found.
    </div>
}
else
{
    @Html.Partial("_CourseList", Model)
}
