@model IEnumerable<SMSLite.Models.Domain.Course>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Code)</th>
            <th>@Html.DisplayNameFor(m => m.First().Credit)</th>
            <th>@Html.DisplayNameFor(m => m.First().Semester)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>@Html.DisplayFor(_ => item.Code)</td>
                <td>@Html.DisplayFor(_ => item.Credit)</td>
                <td>@Html.DisplayFor(_ => item.Semester)</td>
                <td class="text-end">
                    @Html.ActionLink(
                        "Students",
                        "Students",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-warning me-1" }
                    )
                    @Html.ActionLink(
                        "Edit",
                        "Edit",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-warning me-1" }
                    )
                    @Html.ActionLink(
                        "Details",
                        "Details",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-info me-1" }
                    )
                    @Html.ActionLink(
                        "Delete",
                        "Delete",
                        new { id = item.Id },
                        new { @class = "btn btn-sm btn-danger" }
                    )
                </td>
            </tr>
        }
    </tbody>
</table>
